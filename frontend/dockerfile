# ---- Build stage ----
FROM node:20-alpine AS builder
WORKDIR /app

COPY package*.json ./
RUN npm ci

# Copy source and build
COPY . .
RUN npm run build

# Normalize output to /app/_site (supports Vite dist / CRA build / Next export out)
RUN if [ -d dist ]; then cp -r dist _site; \
    elif [ -d build ]; then cp -r build _site; \
    elif [ -d out ]; then cp -r out _site; \
    else echo "‚ùå No build output found (dist/build/out). Check your build script." && ls -la && exit 1; fi

# ---- Run stage (nginx) ----
FROM nginx:alpine
COPY --from=builder /app/_site /usr/share/nginx/html

# Optional: SPA fallback for React Router/Vite
# COPY ./nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
